@model List<MyPortfolio.Models.ProjectModel>

@{
    ViewData["Title"] = "My Projects";
}

<div class="container content-section">
    <h2 class="section-title">Projects Portfolio</h2>
    <p class="text-center lead mb-5">Here are some of the projects that I have made.</p>

    <div class="row g-4">
        @foreach (var project in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card project-card h-100">
                    <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title" style="aspect-ratio: 1/1; object-fit: contain;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text">@project.Description</p>
                        <div class="tech-tags mt-auto mb-3">
                            @foreach (var tech in project.Technologies)
                            {
                                <span class="badge bg-secondary me-1">@tech</span>
                            }
                        </div>
                        <div class="project-links">
                            @if (!string.IsNullOrEmpty(project.OfficialSiteUrl))
                            {
                                <a href="@project.OfficialSiteUrl" target="_blank" class="btn btn-primary"><i class="fas fa-external-link-alt"></i> Official Link</a>
                            }

                            @if (!string.IsNullOrEmpty(project.GitHubUrl))
                            {
                                <a href="@project.GitHubUrl" target="_blank" class="btn btn-outline-light me-2"><i class="fab fa-github"></i> Source Code</a>
                            }

                            @if (!string.IsNullOrEmpty(project.LiveDemoUrl))
                            {
                                <a href="@project.LiveDemoUrl" target="_blank" class="btn btn-primary"><i class="fas fa-desktop"></i> Live Demo</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div> 
    <div class="text-center mt-5 pt-5 border-top border-secondary-subtle">
        <i class="fas fa-rocket fa-3x mb-3 text-primary"></i>
        <h3 class="fw-light">More on the way</h3>
        <p class="lead text-muted">
            This is a curated selection of my work. I am constantly building, learning, and creating new things. <br />
            This portfolio will be updated as new projects are ready to be showcased!
        </p>
        <a href="https://github.com/Pritish1207" target="_blank" class="btn btn-outline-primary mt-3">
            <i class="fab fa-github me-2"></i> Follow My Progress on GitHub
        </a>
    </div>
   

</div> 